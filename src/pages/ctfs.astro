---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="CTFs Participated" sideBarActiveItemID="ctfs">
  <section class="text-white px-6 py-8">
    <h1 class="text-4xl font-extrabold mb-8 border-b pb-2">CTFs Participated</h1>

    <!-- Single grid for all cards -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Card 1: Hackfinity Battle -->
      <div class="bg-[#2e2e3a] rounded-2xl p-6 shadow-lg hover:scale-[1.02] transition-transform duration-300 border border-gray-700">
        <h2 class="text-2xl font-bold text-green-300 mb-2">Hackfinity Battle</h2>
        <p><span class="font-semibold text-gray-300">Organizer:</span> TryHackMe</p>
        <p><span class="font-semibold text-gray-300">Date:</span> March 17 - March 20, 2025</p>
        <p><span class="font-semibold text-gray-300">Category:</span> Medium</p>
        <p class="mt-2">
          <a href="https://tryhackme.com/room/HackfinityBattle" target="_blank" class="text-blue-400 hover:text-blue-300 underline">
            Visit HackfinityBattle ↗
          </a>
        </p>
      </div>

      <!-- Card 2: Cyber Clash -->
      <div class="bg-[#2e2e3a] rounded-2xl p-6 shadow-lg hover:scale-[1.02] transition-transform duration-300 border border-gray-700">
        <h2 class="text-2xl font-bold text-green-300 mb-2">Cyber Clash</h2>
        <p><span class="font-semibold text-gray-300">Organizer:</span> picoCTF</p>
        <p><span class="font-semibold text-gray-300">Date:</span> April 2 - April 5, 2025</p>
        <p><span class="font-semibold text-gray-300">Category:</span> Beginner</p>
        <p class="mt-2">
          <a href="https://picoctf.org" target="_blank" class="text-blue-400 hover:text-blue-300 underline">
            Visit picoCTF ↗
          </a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
